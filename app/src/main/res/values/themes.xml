<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_a200</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base.LoginTheme" parent="Theme.BaseTheme">
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.BaseTheme.MainTheme" parent="Theme.BaseTheme">
        <item name="windowNoTitle">true</item>
    </style>

</resources>